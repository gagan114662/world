# WorldPlay + AI Tutor Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# AI Tutor Configuration
# ===========================================

# Google OAuth (required for user authentication)
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_secret

# Gemini API Key (required for AI tutoring)
GEMINI_API_KEY=your_gemini_api_key

# MongoDB (for user data and sessions)
MONGODB_URI=mongodb://localhost:27017/aitutor

# Redis (for caching and real-time communication)
REDIS_URL=redis://localhost:6379

# ===========================================
# WorldPlay Gateway Configuration
# ===========================================

# WorldPlay Gateway URL (default: localhost:8010)
WORLDPLAY_API_URL=http://localhost:8010
WORLDPLAY_WS_URL=ws://localhost:8010

# ===========================================
# WorldPlay GPU Worker Configuration
# ===========================================

# GPU Worker host and port
# Use your GPU server's IP address if running remotely
WORLDPLAY_GPU_HOST=localhost
WORLDPLAY_GPU_PORT=50051

# HY-WorldPlay Model Paths (on the GPU server)
HY_WORLDPLAY_PATH=./HY-WorldPlay
HY_WORLDPLAY_MODEL_PATH=./HY-WorldPlay/ckpts/hunyuan-video-1.5
HY_WORLDPLAY_ACTION_CKPT=./HY-WorldPlay/ckpts/worldplay/HY-World1.5-Autoregressive-480P-I2V

# ===========================================
# Frontend Configuration
# ===========================================

# API URLs (Vite environment variables)
VITE_API_URL=http://localhost:8002
VITE_TUTOR_WS_URL=ws://localhost:8767
VITE_WORLDPLAY_API_URL=http://localhost:8010
VITE_WORLDPLAY_WS_URL=ws://localhost:8010

# World CDN URL for pre-generated world library
# This is where video segments and metadata are served from
VITE_WORLD_CDN_URL=http://localhost:8010/worlds

# ===========================================
# Optional Configuration
# ===========================================

# OpenRouter API (alternative LLM provider)
# OPENROUTER_API_KEY=your_openrouter_api_key

# S3/MinIO for pre-generated world storage
# S3_BUCKET=worldplay-pregenerated
# S3_ACCESS_KEY=your_access_key
# S3_SECRET_KEY=your_secret_key
# S3_ENDPOINT=https://s3.amazonaws.com
